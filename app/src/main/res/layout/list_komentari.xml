        <!-- Datum ocjene -->
        <TextView
            android:id="@+id/datum_komentara"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/datum_ocjene"
            android:textSize="@dimen/datum_ocjene"
            />

        <!-- Vrijeme ocjene -->
        <TextView
            android:id="@+id/vrijeme_komentara"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/datum_komentara"
            android:layout_alignParentLeft="true"
            android:textColor="@color/datum_ocjene"
            android:textSize="@dimen/datum_ocjene"
            />

    </LinearLayout>

    <!-- Naziv predmeta -->
    <TextView
        android:id="@+id/naziv_predmeta_komentara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:textSize="@dimen/naziv_predmeta"
        android:textStyle="bold" />


    <!-- Komentar ocjene -->
    <TextView
        android:id="@+id/komentar_komentar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/naziv_predmeta_komentara"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/left"
        android:textColor="@color/komentar_ocjene"
        android:textSize="@dimen/komentar_ocjene" />




